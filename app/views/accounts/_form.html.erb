<%= form_for @account, url: register_path do |f| %>
  <%= render "layouts/error_messages", object: @account %>

  <div class="col-md-6 col-md-offset-3 form-horizontal">
  <%= f.fields_for :person do |p| %>
    <div class="form-group">
      <label>First name </label>
      <%= p.text_field :first_name, id: 'first_name', class: 'form-control', placeholder: 'John' %>
    </div>

    <div class="form-group">
      <label>Last name</label>
      <%= p.text_field :last_name, id: 'last_name', class: 'form-control', placeholder: 'Doe' %>
    </div<
  <% end %>

  <div class="form-group">
    <label>Email</label>
    <%= f.text_field :email, id: 'email', class: 'form-control', placeholder: 'email@example.com' %>
  </div>

  <div class="form-group">
    <label>Password</label>
    <%= f.password_field :password, id: 'password', class: 'form-control', placeholder: 'Strong password' %>
  </div>

  <div class="form-group">
    <label>Confirm password</label>
    <%= f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control', placeholder: 'Strong password' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', id: 'submit', class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
