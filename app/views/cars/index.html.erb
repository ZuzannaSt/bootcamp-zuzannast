<h1>Your registered cars</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">Car model</th>
      <th colspan="3">Number</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td colspan="3"><%= car.model %></td>
        <td colspan="3"><%= car.registration_number %></td>
        <td colspan="3"><%= link_to 'Show', car %></td>
        <td colspan="3"><%= link_to 'Edit', edit_car_path(car) %></td>
        <td colspan="3"><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

