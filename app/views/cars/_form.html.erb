<%= form_for(@car) do |f| %>
  <%= render "layouts/error_messages", object: @car %>

  <div class="col-md-6 col-md-offset-3 form-horizontal">
    <div class="form-group">
      <label>Car model </label>
      <%= f.text_field :model, id: 'model', class: "form-control", placeholder: "Fiat" %>
    </div>

  <div class="form-group">
    <label>Registration number</label>
    <%= f.text_field :registration_number, id: 'registration_number', class: "form-control", placeholder: "KRA777" %>
  </div>

  <div class="form-group">
    <label>Add image</label>
    <%= f.file_field :image, id: 'image' %>
    <%= f.hidden_field :retained_image %>
  </div>

  <% if @car.image_stored? %>
    <%= image_tag @car.image.thumb('200x100#').url %>
    <div class="form-group">
      <%= f.label "Remove that image" %>
      <%= f.check_box :remove_image, id: 'remove', class: "checkbox" %>
    </div>
  <% end %>

  <%= f.hidden_field :owner_id %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary pull-right" %>
  </div>
</div>

<% end %>
