<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <b>Car model </b><br>
    <%= f.text_field :model, id: 'model' %>
  </p>
  
  <p>
    <b>Registration number</b><br>
    <%= f.text_field :registration_number, id: 'registration_number' %>
  </p>

  <p>
    <b>Add image</b><br>
    <%= f.file_field :image, id: 'image' %>
    <%= f.hidden_field :retained_image %>
  </p>

  <% if @car.image_stored? %>
    <%= image_tag @car.image.thumb('200x100#').url %>
    <p>
      <%= f.label "Remove that image" %>
      <%= f.check_box :remove_image, id: 'remove' %>
    </p>
  <% end %>
    
  <%= f.hidden_field :owner_id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
