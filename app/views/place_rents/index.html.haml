%h1 Listing rents
%table
  %thead
    %tr
      %th{:colspan => "3"} Parking
      %th{:colspan => "3"} Car
      %th{:colspan => "3"} Start date
      %th{:colspan => "3"} End date
      %th{:colspan => "3"}
  %tbody
    - @places.each do |place|
      %tr{id: "place_rent_#{place.id}"}
        %td{:colspan => "3"}
          - if place.parking && place.parking.address
            = link_to place.parking.address.city, place.parking
        %td{:colspan => "3"}= link_to place.car.try(:model), place.car
        %td{:colspan => "3"}= place.start_date
        %td{:colspan => "3"}= place.end_date
        %td{:colspan => "3"}= link_to "Show", place_rent_path(place)
