.container
  .row
    .col-md-10.col-md-offset-1
      %table.table.table-bordered.table-hover.text-center
        %thead
          %tr
            %th.text-center Parking
            %th.text-center Car
            %th.text-center Start date
            %th.text-center End date
            %th.text-center Show
        %tbody
          - @places.each do |place|
            %tr{id: "place_rent_#{place.id}"}
              %td
                - if place.parking && place.parking.address
                  = link_to place.parking.address.city, place.parking
              %td= link_to place.car.try(:model), place.car
              %td= place.start_date.to_formatted_s(:short)
              %td= place.end_date.to_formatted_s(:short)
              %td
                = link_to place_rent_path(place), class: "btn button-lg" do
                  %span.glyphicon.glyphicon-eye-open
