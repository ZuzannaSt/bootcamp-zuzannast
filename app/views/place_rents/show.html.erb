<div class = "container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th colspan="3">Parking</th>
            <th colspan="3">Car</th>
            <th colspan="3">Start date</th>
            <th colspan="3">End date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="3">
              <% if @place.parking && @place.parking.address %>
                <%= link_to @place.parking.address.city, @place.parking %>
              <% else %>
                No city
              <% end %>
            </td>
            <td colspan="3">
              <% if @place.car && @place.car.model %>
                <%= link_to @place.car.model, @place.car %>
              <% else %>
                No model
              <% end %>
            </td>
            <td colspan="3"><%= @place.start_date.to_formatted_s(:long) %></td>
            <td colspan="3"><%= @place.end_date.to_formatted_s(:long) %></td>
          </tr>
        </tbody>
      </table>
      <br>
      <%= link_to place_rents_path, class: "btn button-lg" do %>
        <span class="glyphicon glyphicon-backward space"></span>back to rents
      <% end %>
    </div>
  </div>
</div>
