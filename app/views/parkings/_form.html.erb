<%= form_for @parking do |f| %>
 <% if @parking.errors.any? %>
    <% @parking.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <%= f.fields_for :address do |a| %>
    <p>
      <b>City </b><br>
      <%= a.text_field :city %>
    </p>
    
    <p>
      <b>Zip code</b><br>
      <%= a.text_field :zip_code %>
    </p>
    
    <p>
      <b>Street</b><br>
      <%= a.text_field :street %>
    </p>
  <% end %>

  <p>
    <b>Parking places</b><br>
    <%= f.text_field :places %>
  </p>
  
  <p>
    <b>Parking kind</b><br>
    <%= f.text_field :kind %>
  </p>
  
  <p>
    <b>Parking hour price</b><br>
    <%= f.text_field :hour_price %>
  </p>
  
  <p>
    <b>Parking day price</b><br>
    <%= f.text_field :day_price %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
