<%= form_for @parking do |f| %>
  <%= render "layouts/error_messages", object: @parking %>

  <div class="col-md-6 col-md-offset-3 form-horizontal">
  <%= f.fields_for :address do |a| %>
    <div class="form-group">
      <label>City</label>
      <%= a.text_field :city, id: 'city', class: "form-control", placeholder: "City" %>
    </div>

    <div class="form-group">
      <label>Zip code</label>
      <%= a.text_field :zip_code, id: 'zip_code', class: "form-control", placeholder: "30-330" %>
    </div>

    <div class="form-group">
      <label>Street</label>
      <%= a.text_field :street, id: 'street', class: "form-control", placeholder: "ul. Random 1" %>
    </div>
  <% end %>

  <div class="form-group">
    <label>Parking places</label>
    <%= f.text_field :places, id: 'places', class: "form-control", placeholder: "100" %>
  </div>

  <div class="form-group">
    <label>Parking kind</label>
    <%= f.select :kind, ['indoor', 'outdoor', 'private', 'street'], {include_blank: "Choose kind", default: nil}, id: 'kind', class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Parking hour price</label>
    <%= f.text_field :hour_price, id: 'hour_price', class: "form-control", placeholder: "5.00" %>
  </div>

  <div class="form-group">
    <label>Parking day price</label>
    <%= f.text_field :day_price, id: 'day_price', class: "form-control", placeholder: "50.00" %>
  </div>

  <div class="form-group pull-right">
    <%= f.submit 'Submit', id: 'submit', class: "btn btn-primary" %>
  </div>
<% end %>
