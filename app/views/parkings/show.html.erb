<h1> Show parking </h1>

<table>
  <tr>
    <th>City</th>
    <th>Zip code</th>
    <th>Street</th>
    <th>Owner</th>
    <th>Kind</th>
    <th>Places</th>
    <th>Hour price</th>
    <th>Day price</th>
  </tr>

  <tr>
    <td><%= @parking.address.city if @parking.address %></td>
    <td><%= @parking.address.zip_code if @parking.address %></td>
    <td><%= @parking.address.street if @parking.address %></td>
    <td><%= @parking.owner.first_name if @parking.owner %><%= @parking.owner.second_name if @parking.owner %></td>
    <td><%= @parking.kind %></td>
    <td><%= @parking.places %></td>
    <td><%= @parking.hour_price %></td>
    <td><%= @parking.day_price %></td>
  </tr>
</table>

<%= link_to "<<< Back", parkings_path %>
