<h1>Listing Parkings</h1>
 
<table>
  <tr>
    <th colspan="3">City</th>
    <th colspan="3">Places</th>
    <th colspan="3">Hour price</th>
    <th colspan="3">Day price</th>
    <th colspan="3"></th>
    <th colspan="3"></th>
    <th colspan="3"></th>
    <th colspan="3"></th>
  </tr>
 
<% @parkings.each do |parking| %>
  <tr>
    <td colspan="3"><% if parking.address %><%= parking.address.city %><% end %></td>
    <td colspan="3"><%= parking.places %></td>
    <td colspan="3"><%= parking.hour_price %></td>
    <td colspan="3"><%= parking.day_price %></td>
    <td colspan="3"><%= link_to "RENT", new_parking_place_rent_path(parking.id) %>
    <td colspan="3"><%= link_to "Show", parking %></td>
    <td colspan="3"><%= link_to "Edit", edit_parking_path(parking) %></td>
    <td colspan="3"><%= link_to "Remove", parking, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</table>
<br>
<h3> Search for parking: </h3>
<%= form_tag("/search", method: "get") do %>
  <div>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag :city %><br>
  </div>
  <div>
    <%= label_tag(:hour_price, "Hour price") %>
    <%= text_field_tag :hour_price %>
  </div>
  <div>
    <%= label_tag(:day_price, "Day price") %>
    <%= text_field_tag :day_price %>
  </div>
  <div>
    <%= label_tag(:private, "Private") %>
    <%= check_box_tag("private") %>
    <%= label_tag(:public, "Public") %>
    <%= check_box_tag("public") %>
  </div> 
  <div>
  <%= submit_tag("Search") %>
  </div>
<% end %>

<br>
<%= link_to "Add new parking", new_parking_path(@parking) %>
